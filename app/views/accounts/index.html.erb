<% @page_title = "Activated|students" %>

<h3>student users</h3>
<div style="font-size:12px;float:left;">
  <%= pluralize(@accounts.size, "accounts") %> activated
</div>
<div style="float:right;">
  <%= link_to('Back', {:controller=>'admin',:action=>'managestudents'},:class=>"btn-link" )%>
</div>
<table class="table table-striped" style="font-size:14px;">
  <tr>
    <th>USERNAME</th>
    <th>STUDENT NO</th>
    <th>SCHOOL</th>
    <th>ACTION</th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.username %></td>
    <td><%= account.student_no %></td>
    <td><%= account.school_name %></td>
    <td>
      <%= link_to('Show',{:controller=>'accounts',:action=>'show', :id=>account.id} , :class=>"btn-link") %> | 
      <%= link_to 'Edit', {:controller=>'accounts',:action=>'edit', :id=>account.id} , :class=>"btn-link" %> | 
      <%= link_to 'Destroy', {:controller=>'accounts',:action=>'index'} , confirm: 'Are you sure?', method: :delete , :class=>"btn-link" %>
    </td>
  </tr>
<% end %>
</table>

<br />

