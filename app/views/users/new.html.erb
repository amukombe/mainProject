<% @page_title = "Users|New" %>
<h3>New user</h3>
<%= form_for(:user, :url=>{:action=>'create'}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" style="border:1px solid black;border-color:#CC0000; font-size:14px;text-align:left;">     
      <% @user.errors.full_messages.each do |msg| %>
        <%= msg %>,
      <% end %>
      
    </div>
  <% end %>
<table>
<%= render(:partial=>'form', :locals=>{:f=>f}) %>
<div class="actions">
    <tr><td>
      <%= submit_tag "Create", :class=>"btn btn-medium btn-success" %>
    </td></tr>
  </div>
<% end %>
</table>
<%= link_to 'Back', users_path , :class=>"btn-link" %>
