<%@page_title='Student | list'%>
<h3>Listing students</h3>
<div style="font-size:12px;float:left;">
  <%= pluralize(@students.size, "students") %> registered
</div>
<div style="float:right;">
  <%= link_to('Back', {:controller=>'admin',:action=>'managestudents'},:class=>"btn-link" )%>
</div>
<table class="table table-striped" style="font-size:14px;">
  <tr>
    <th>FIRSTNAME</th>
    <th>LASTNAME</th>
    <th>STUDENT NO</th>
    <th>ACTION</th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.firstname %></td>
    <td><%= student.lastname %></td>
    <td><%= student.student_number %></td>
    <td>
        <%= link_to 'Show', {:action=>'show', :id=>student.id}, :class=>"btn-link" %> |
        <%= link_to 'Edit', {:action=>'edit', :id=>student.id} , :class=>"btn-link"%> |
        <%= link_to 'Destroy', {:action=>'delete', :id=>student.id}, :class=>"btn-link"%>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Student', new_student_path , :class=>"btn btn-medium btn-info"%>
