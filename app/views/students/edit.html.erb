<%@page_title='Student | edit'%>
<h3>Editing student</h3>
<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div style="border:1px solid black;border-color:#CC0000; font-size:14px;text-align:left;">      
      <% @student.errors.full_messages.each do |msg| %>
        
        <%= msg %>,

      <% end %>
    </div>
  <% end %>
<table>
<%= render(:partial=>'form', :locals=>{:f=>f} )%>
 <div class="actions">
    <tr><td>
      <%= submit_tag "Update", :class=>"btn btn-medium btn-success" %>
    </td></tr>
  </div>
<% end %>
</table>
<%= link_to 'Show', @student , :class=>"btn-link" %> |
<%= link_to 'Back', students_path , :class=>"btn-link" %>
